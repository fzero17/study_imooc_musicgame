<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/index_background"
        android:orientation="vertical">

        <!--顶部-->
        <include layout="@layout/top_bar" />
        <!--唱片-->
        <include layout="@layout/pan_layout" />
        <!--文字选择框-->
        <include layout="@layout/name_select" />
    </LinearLayout>

    <include layout="@layout/activity_float"></include>

    <include layout="@layout/activity_passgame"></include>
</FrameLayout>
